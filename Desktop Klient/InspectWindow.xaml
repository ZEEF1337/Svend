<Window x:Class="Desktop_Klient.InspectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop_Klient"
        mc:Ignorable="d"
        Title="InspectWindow" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <ScrollViewer x:Name="scrollViewer" Margin="10,0,10,90">
            <StackPanel x:Name="StackPanel" Height="{Binding ActualHeight, ElementName=scrollViewer, Mode=OneWay}" Width="{Binding ActualWidth, ElementName=scrollViewer, Mode=OneWay}">
                <Label x:Name="TicketTitle" Content="" Padding="0,0,0,0" FontWeight="Bold"/>
                <TextBlock x:Name="TicketBody" TextWrapping="Wrap"/>

            </StackPanel>
        </ScrollViewer>
        <TextBox x:Name="ReplyTextBox" HorizontalAlignment="Left" Margin="25,359,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="516" Height="50"/>
        <Button x:Name="SendReplyBtn" Content="Indsend" HorizontalAlignment="Left" Margin="606,359,0,0" VerticalAlignment="Top" Width="135" Height="50" Background="#FF3F9EE0" Foreground="White" Click="SendReply"/>

    </Grid>
</Window>
